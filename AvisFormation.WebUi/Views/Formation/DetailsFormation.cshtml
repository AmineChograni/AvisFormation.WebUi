@model AvisFormation.WebUi.Models.FormationAvecAvisViewModel
@{
    ViewBag.Title = "DetailsFormation";
}

<h2 class="text-info">DetailsFormation</h2>

<div class="card bg-secondary">
    <h5 class="card-header">@Model.FName</h5>
    <div class="card-body">
        @if (Model.FNote == 0)
        {
            <h5><span>Aucune note</span></h5>
        }
        else
        {
            <h5><span>Note : </span><span>@Model.FNote /5</span></h5>
        }
        <p><h6>Description : </h6><span>@Model.FDescription</span></p>
        <div class="btn btn-light">@Html.ActionLink("Ajouter un avis", "AjouterUnAvis", "Avis", new { nomSeo = Model.FNomSEO }, null)</div>
    </div>

    <div class="card-footer">
        <div><span>nomber Avis : </span><span>@Model.FNbrAvis</span></div>
    </div>
</div>





