@if (Model.Avis == null)
{
    <h4 class="text-center text-info" style="margin-top:20px;">Aucun avis</h4>
}
else
{
        foreach (var item in Model.Avis)
        {
            <div class="card bg-info text-center" style="margin:20px;">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item bg-info"><h5>@item.Nom</h5></li>
                    <li class="list-group-item bg-secondary">@item.Note /5</li>
                    <li class="list-group-item bg-secondary">@item.DateAvis</li>
                    <li class="list-group-item bg-dark"><p>@item.Description</p></li>
                </ul>
            </div>
            
        }
}





@section scripts{
    <script type="text/javascript">
        $(function () {
            var avissuccess = '@TempData["AvisSuccess"]'
            if (avissuccess != '')
                alertify.success(avissuccess);
        });
    </script>
    }


